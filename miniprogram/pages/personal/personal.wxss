.page-personal {
  height: 100%;
}

.page-personal .user-info {
  height: 300rpx;
  width: 750rpx;
  background: #fff;
}

.page-personal .user-info::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  -webkit-transform: scale(1, 0.5) translateY(50%);
  transform: scale(1, 0.5) translateY(50%);
  background: #f0f0f0;
}

.page-personal .user-info-panel {
  height: 100%;
  width: 100%;
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: start;
  justify-content: flex-start;
  position: relative;
}

.page-personal .user-info-panel .avatar-box {
  height: 128rpx;
  width: 128rpx;
  border-radius: 10rpx;
  margin: 0 36rpx;
  overflow: hidden;
}

.page-personal .user-info-panel .avatar-box image {
  display: block;
  height: 100%;
  width: 100%;
}

.page-personal .user-info-panel .info-box {
  height: 128rpx;
}

.page-personal .user-info-panel .info-box .name,
.page-personal .user-info-panel .info-box .id-number {
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
}

.page-personal .user-info-panel .info-box .name {
  height: 74rpx;
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
}

.page-personal .user-info-panel .info-box .id-number {
  display: inline-block;
  height: 54rpx;
  font-size: 34rpx;
  color: #4e4e4e;
  width: 220px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
  font-weight: 400;
}

.page-personal .login-panel {
  height: 100%;
  width: 100%;
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: center;
  justify-content: center;
}

.page-personal .login-panel .btn-login {
  font-weight: 500;
  color: #666;
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
}

.page-personal .login-panel .login-desc {
  font-size: 32rpx;
  font-weight: 500;
  color: #999;
}

.page-personal .module-lists {
  position: relative;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.page-personal .module-lists::before, .page-personal .module-lists::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: #f0f0f0;
}

.page-personal .module-lists::before {
  top: 0;
  -webkit-transform: scale(1, 0.5) translateY(-50%);
  transform: scale(1, 0.5) translateY(-50%);
}

.page-personal .module-lists::after {
  bottom: 0;
  -webkit-transform: scale(1, 0.5) translateY(50%);
  transform: scale(1, 0.5) translateY(50%);
}

.page-personal .module-lists .module {
  position: relative;
  height: 110rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #fff;
  display: -webkit-box;
  display: flex;
  -webkit-box-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  align-items: center;
  font-size: 34rpx;
  -webkit-transition: background 0.1s;
  transition: background 0.1s;
}

.page-personal .module-lists .module.hover {
  background: #ddd;
}

.page-personal .module-lists .module::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 30rpx;
  height: 2rpx;
  -webkit-transform: scale(1, 0.5) translateY(50%);
  transform: scale(1, 0.5) translateY(50%);
  background: #f0f0f0;
}

.page-personal .module-lists .module:last-child::after {
  display: none;
}

.page-personal .module-lists .module.main-icon {
  padding-left: 100rpx;
}

.page-personal .module-lists .module.main-icon::after {
  left: 110rpx;
}

.page-personal .module-lists .module.more-icon {
  padding-right: 90rpx;
}

.page-personal .module-lists .module .list-icon,
.page-personal .module-lists .module .more-icon {
  display: -webkit-box;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
}

.page-personal .module-lists .module .list-icon {
  position: absolute;
  left: 0;
  top: 0;
  width: 110rpx;
  height: 110rpx;
}

.page-personal .module-lists .module .list-icon .icon-cnode {
  font-size: 40rpx;
  font-weight: 700;
}

.page-personal .module-lists .module .more-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 90rpx;
  height: 110rpx;
}

.page-personal .module-lists .module .more-icon .icon-cnode {
  font-size: 30rpx;
  color: #bfbfbf;
}

.page-personal .module-lists .module .main-text {
  font-weight: 400;
}

.page-personal .module-lists .module .sub-text {
  font-weight: 400;
  color: #999;
}

.page-personal .module-lists .module .sub-text.version {
  font-size: 26rpx;
  position: relative;
  right: -10rpx;
  font-weight: 700;
}

.page-personal .module-lists {
  color: #333;
}

.page-personal .module-lists .version {
  color: #999;
}

.page-personal .module-lists .relaunch {
  color: orange;
}

.page-personal .module-lists .message {
  color: blue;
}

.page-personal .module-lists .feedback {
  color: #cd4343;
}

.page-personal .module-lists .share {
  color: #026e00;
}

.page-personal .module-lists .btn-feedback {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9;
  opacity: 0;
}

.page-personal .wx_quick_login {
  position: relative;
  display: -webkit-box;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  flex-direction: row;
  -webkit-box-align: center;
  align-items: center;
  height: 80rpx;
  background-color: #1aad19;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 50rpx;
}

.page-personal .wx_quick_login .wx_img {
  width: 40rpx;
  height: 36rpx;
}

.page-personal .wx_quick_login .wx_text {
  font-family: PingFang SC;
  font-size: 32rpx;
  color: #fff;
  line-height: 32rpx;
  margin-left: 30rpx;
}

.page-personal .wx_quick_login .wx_login_btn {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  padding: 0;
  margin: 0;
}
.container {
    background-color: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo button {
  margin-top: 100rpx;
  background-color: #cd58ff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  padding-bottom: 20rpx;
}
